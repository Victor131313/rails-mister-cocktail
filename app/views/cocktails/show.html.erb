
   <h3>Recipe</h3>
  <table class="table table-bordered text-center">   
    <tbody>       
      <thead>     
         <th>Ingredient</th>    
         <th>Description</th>     
         <th>Action</th>    
      </thead> 
          <% @cocktail.doses.each do |dose| %>  
      <tr>          
        <td><%= dose.ingredient.name %></td>
        <td><%= dose.description %></td>              
        <td> 

          <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %> 
          <i class="fa fa-trash destroy_dose"></i>             
        <% end %>   
         </td>    
         </tr>  
        <% end %>  
          </tbody> 
          </table>

  <li><%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail), :class=>"btn btn-outline-primary" %></li>
  <li><%= link_to "Back to all cocktails", root_path, :class=>"btn btn-outline-secondary" %></li>  
   <li><%= link_to cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure?" } do %>   
   <p class="btn btn-outline-danger">Delete</p></li>
    <% end  %>
